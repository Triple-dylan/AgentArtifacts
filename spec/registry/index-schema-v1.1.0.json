{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentassets.io/spec/registry/index-schema-v1.1.0.json",
  "title": "Agent Assets Registry Index",
  "type": "object",
  "additionalProperties": false,
  "required": ["registry_schema_version", "generated_at", "pagination", "filters", "items"],
  "properties": {
    "registry_schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "pagination": {
      "type": "object",
      "additionalProperties": false,
      "required": ["page", "page_size", "total_items", "total_pages", "next_page", "prev_page"],
      "properties": {
        "page": { "type": "integer", "minimum": 1 },
        "page_size": { "type": "integer", "minimum": 1 },
        "total_items": { "type": "integer", "minimum": 0 },
        "total_pages": { "type": "integer", "minimum": 0 },
        "next_page": { "type": ["integer", "null"], "minimum": 1 },
        "prev_page": { "type": ["integer", "null"], "minimum": 1 }
      }
    },
    "filters": {
      "type": "object",
      "additionalProperties": false,
      "required": ["types", "availability", "execution_mode", "market_type"],
      "properties": {
        "types": { "type": "array", "items": { "type": "string" } },
        "availability": { "type": "array", "items": { "type": "string" } },
        "execution_mode": { "type": "array", "items": { "type": "string" } },
        "market_type": { "type": "array", "items": { "type": "string" } }
      }
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type", "name", "version", "price_usd", "availability", "execution_mode", "market_type", "product_page"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "name": { "type": "string" },
          "version": { "type": "string" },
          "price_usd": { "type": "number" },
          "availability": { "type": "string" },
          "execution_mode": { "type": "string" },
          "market_type": { "type": "string" },
          "product_page": { "type": "string", "format": "uri" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
